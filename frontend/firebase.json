{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "destination": "https://your-api.vercel.app"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
